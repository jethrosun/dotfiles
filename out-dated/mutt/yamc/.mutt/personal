## Receive options.
set imap_user=jethro.sun7@gmail.com
set imap_pass=$my_pw_personal
# Every time the password is needed, use $my_pw_personal variable.
set folder = imaps://jethro.sun7@imap.gmail.com/
set spoolfile = +INBOX
set postponed = +Drafts
set record = +Sent

## Send options.
set smtp_url=smtps://jethro.sun7:vo1dchris@smtp.gmail.com
set realname='Shuwen Sun'
set from=jethro.sun7@gmail.com
set hostname="gmail.com"
set signature="Jethro Sun"
# Connection options
set ssl_force_tls = yes
unset ssl_starttls

## Hook -- IMPORTANT!
account-hook $folder "set imap_user=jethro.sun7@gmail.com imap_pass=vo1dchris"
