## Receive options.
set imap_user=shwsun@bu.edu
set imap_pass=$my_pw_work
# Every time the password is needed, use $my_pw_personal variable.
set folder = imaps://shwsun@imap.gmail.com/
set spoolfile = +INBOX
set postponed = +Drafts
set record = +Sent

## Send options.
set smtp_url=smtps://shwsun:123MIsilandier_@smtp.gmail.com
set realname='Shuwen Sun'
set from=shwsun@bu.edu
set hostname="gmail.com"
set signature="Jethro Shuwen Sun"
# Connection options
set ssl_force_tls = yes
unset ssl_starttls

## Hook -- IMPORTANT!
account-hook $folder "set imap_user=shwsun@bu.edu imap_pass=123MIsilandier_"
